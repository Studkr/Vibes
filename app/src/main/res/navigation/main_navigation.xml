<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation.xml"
    app:startDestination="@id/homeFragment">

    <action
        android:id="@+id/toCategoryFragment"
        app:destination="@+id/fragmentCategory"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <action
        android:id="@+id/toDetailsFragment"
        app:destination="@+id/fragmentDetailsCategory"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />
    <action
        android:id="@+id/toVideoPlayer"
        app:destination="@+id/fragmentVideoPlayer"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />
    <action
        android:id="@+id/toAudioContent"
        app:destination="@+id/audioContentFragment"
        app:enterAnim="@animator/slide_in_left"
        app:exitAnim="@animator/slide_out_right"
        app:popEnterAnim="@animator/slide_in_right"
        app:popExitAnim="@animator/slide_out_left" />
    <action
        android:id="@+id/toPhotoFragment"
        app:destination="@+id/photoFragment"
        app:enterAnim="@animator/slide_in_left"
        app:exitAnim="@animator/slide_out_right"
        app:popEnterAnim="@animator/slide_in_right"
        app:popExitAnim="@animator/slide_out_left" />

    <action
        android:id="@+id/toMyMixFragment"
        app:destination="@+id/myMixContainer"
        app:enterAnim="@animator/slide_in_left"
        app:exitAnim="@animator/slide_out_right"
        app:popEnterAnim="@animator/slide_in_right"
        app:popExitAnim="@animator/slide_out_left" />

    <action
        android:id="@+id/toContentFragment"
        app:destination="@+id/categoryContainerFragment"
        app:enterAnim="@animator/slide_in_left"
        app:exitAnim="@animator/slide_out_right"
        app:popEnterAnim="@animator/slide_in_right"
        app:popExitAnim="@animator/slide_out_left" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vibesoflove.ui.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
    </fragment>

    <action
        android:id="@+id/toAudioPlayer"
        app:destination="@+id/fragmentAudioPlayer"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/fragmentCategory"
        android:name="com.vibesoflove.ui.home.deatils.FragmentCategory"
        android:label="fragment_category_fragment"
        tools:layout="@layout/fragment_category_fragment" />

    <fragment
        android:id="@+id/fragmentDetailsCategory"
        android:name="com.vibesoflove.ui.home.category_details.FragmentDetailsCategory"
        android:label="fragment_details_category_fragment"
        tools:layout="@layout/fragment_details_category_fragment" />
    <fragment
        android:id="@+id/fragmentVideoPlayer"
        android:name="com.vibesoflove.ui.home.video.FragmentVideoPlayer"
        android:label="fragment_video_player_fragment"
        tools:layout="@layout/fragment_video_player_fragment" />
    <fragment
        android:id="@+id/fragmentAudioPlayer"
        android:name="com.vibesoflove.ui.audio.FragmentAudioPlayer"
        android:label="fragment_audio_player_fragment"
        tools:layout="@layout/fragment_audio_player_fragment" />
    <fragment
        android:id="@+id/myMixContainer"
        android:name="com.vibesoflove.ui.mix.MyMixContainer"
        android:label="my_mix_container_fragment"
        tools:layout="@layout/my_mix_container_fragment" />
    <fragment
        android:id="@+id/contentFragment"
        android:name="com.vibesoflove.ui.content.item.ContentVideoFragment"
        android:label="content_fragment"
        tools:layout="@layout/content_fragment" />
    <fragment
        android:id="@+id/audioContentFragment"
        android:name="com.vibesoflove.ui.content.audio.AudioContentFragment"
        android:label="audio_content_fragment"
        tools:layout="@layout/audio_content_fragment" />
    <fragment
        android:id="@+id/categoryContainerFragment"
        android:name="com.vibesoflove.ui.content.CategoryContainerFragment"
        android:label="category_container_fragment"
        tools:layout="@layout/category_container_fragment" />
    <fragment
        android:id="@+id/photoFragment"
        android:name="com.vibesoflove.ui.home.photo.PhotoFragment"
        android:label="fragment_photo"
        tools:layout="@layout/fragment_photo" />


</navigation>